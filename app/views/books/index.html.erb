<p id="notice"><%= notice %></p>
<div style="position: absolute; right: 10%">
  <%= link_to 'Add Book', books_new_path , class:"btn btn-secondary btn-lg"%>
</div>
<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.category %></td>

        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


