<p id="notice"><%= notice %></p>
<div style="position: absolute; right: 10%">
  <%= link_to 'Add Category', news_new_path , class:"btn btn-secondary btn-lg"%>
</div>
<h1>Categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Category</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.category %></td>
        <td><%= news.number %></td>
        <td><%= link_to 'Show', news %></td>
        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

